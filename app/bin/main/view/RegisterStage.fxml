<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TicketBooking.Actions.RegisterStage">
    <children>

        <TextField fx:id="usernameTextField" layoutX="252.0" layoutY="93.0" prefHeight="25.0" prefWidth="220.0" />
        <PasswordField fx:id="passwordField" layoutX="252.0" layoutY="173.0" prefHeight="25.0" prefWidth="220.0" />
        <PasswordField fx:id="confirmTextField" layoutX="252.0" layoutY="213.0" prefHeight="25.0" prefWidth="220.0" />

        <Label fx:id="accountLabel" layoutX="104.0" layoutY="91.0" text="Account">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="passwordLabel" layoutX="97.0" layoutY="169.0" text="Password">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="confirmLabel" layoutX="106.0" layoutY="211.0" text="Confirm">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Button fx:id="registerButton" layoutX="237.0" layoutY="283.0" mnemonicParsing="false" onAction="#switchToDefaultStage" prefHeight="35.0" prefWidth="124.0" text="Register">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="backButton" layoutX="237.0" layoutY="332.0" mnemonicParsing="false" onAction="#switchToLoginStage" prefHeight="35.0" prefWidth="124.0" text="Back">
            <font>
                <Font size="15.0" />
            </font>
        </Button>

        <Label fx:id="errorLabel" alignment="CENTER" layoutY="260.0" prefHeight="19.0" prefWidth="600.0" textFill="RED">
            <font>
                <Font size="13.0" />
            </font>
        </Label>

    </children>
</AnchorPane>
