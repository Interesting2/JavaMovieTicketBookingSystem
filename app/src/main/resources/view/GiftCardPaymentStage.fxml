<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" onKeyPressed="#keyPressed" onMouseClicked="#mouseClicked" onMouseMoved="#mouseMoved" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TicketBooking.Actions.GiftCardPaymentStage">
    <children>
        <TextField fx:id="giftCardTextField" layoutX="251.0" layoutY="92.0" onKeyPressed="#keyPressed" onMouseClicked="#mouseClicked" onMouseMoved="#mouseMoved" prefHeight="25.0" prefWidth="220.0" />

        <Label fx:id="giftCardLabel" layoutX="104.0" layoutY="91.0" onKeyPressed="#keyPressed" onMouseClicked="#mouseClicked" onMouseMoved="#mouseMoved" text="Gift Card">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <Button fx:id="confirmButton" layoutX="237.0" layoutY="302.0" mnemonicParsing="false" onAction="#switchToReceipt" onKeyPressed="#keyPressed" onMouseClicked="#mouseClicked" onMouseMoved="#mouseMoved" prefHeight="35.0" prefWidth="124.0" text="confirm">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="cancelButton" layoutX="237.0" layoutY="344.0" mnemonicParsing="false" onAction="#switchToDefaultStage" onKeyPressed="#keyPressed" onMouseClicked="#mouseClicked" onMouseMoved="#mouseMoved" prefHeight="35.0" prefWidth="124.0" text="cancel">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Label fx:id="errorLabel" alignment="CENTER" layoutY="216.0" onKeyPressed="#keyPressed" onMouseClicked="#mouseClicked" onMouseMoved="#mouseMoved" prefHeight="19.0" prefWidth="600.0" textFill="RED">
            <font>
                <Font size="13.0" />
            </font>
        </Label>

    </children>
</AnchorPane>
