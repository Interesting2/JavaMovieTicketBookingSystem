<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="500.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TicketBooking.Actions.ManageStage">
    <children>
        <Button fx:id="MovieManageButton" layoutX="75.0" layoutY="80.0" mnemonicParsing="false" onAction="#switchToMovieManage" prefHeight="35.0" prefWidth="200.0" text="Movie Manage">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="GiftCardManageButton" layoutX="75.0" layoutY="130.0" mnemonicParsing="false" onAction="#switchToGiftCardManage" prefHeight="35.0" prefWidth="200.0" text="Gift Card Manage">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="StaffManageButton" layoutX="75.0" layoutY="180.0" mnemonicParsing="false" onAction="#switchToStaffManage" prefHeight="35.0" prefWidth="200.0" text="Staff Manage">
            <font>
                <Font size="15.0" />
            </font>
        </Button>

        <Button fx:id="MovieReportsButton" layoutX="75.0" layoutY="230.0" mnemonicParsing="false" onAction="#switchToGiftCardReportManage" prefHeight="35.0" prefWidth="200.0" text="Movie Reports">
            <font>
                <Font size="15.0" />
            </font>
        </Button>

        <Button fx:id="cancellationLogReportButton" layoutX="75.0" layoutY="280.0" mnemonicParsing="false" onAction="#switchToCancellationLogReport" prefHeight="35.0" prefWidth="200.0" text="Cancellation Log Report">
            <font>
                <Font size="15.0" />
            </font>
        </Button>

        <Button fx:id="backButton" layoutX="75.0" layoutY="420.0" mnemonicParsing="false" onAction="#switchToLoginStage" prefHeight="35.0" prefWidth="200.0" text="Back">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
      <Label fx:id="errMsg" layoutX="39.0" layoutY="40.0" text="" textFill="RED" />

    </children>
</AnchorPane>
