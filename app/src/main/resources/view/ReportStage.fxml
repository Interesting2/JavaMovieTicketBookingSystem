<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="500.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TicketBooking.Actions.ReportStage">
    <children>
        <Button fx:id="customerBookingsButton" layoutX="100.0" layoutY="165.0" mnemonicParsing="false" onAction="#switchToCustomerBookingsReport" prefHeight="35.0" prefWidth="150.0" text="Customer Bookings">
            <font>
                <Font size="15.0" />
            </font>
        </Button>

        <Button fx:id="upcomingMoviesButton" layoutX="100.0" layoutY="215.0" mnemonicParsing="false" onAction="#switchToUpcomingMoviesReport" prefHeight="35.0" prefWidth="150.0" text="Upcoming Movies">
            <font>
                <Font size="15.0" />
            </font>
        </Button>

        <Button fx:id="backButton" layoutX="100.0" layoutY="264.0" mnemonicParsing="false" onAction="#switchToManagerStage" prefHeight="35.0" prefWidth="150.0" text="Back">
            <font>
                <Font size="15.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
